{
  "name": "pixelic-api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixelicc/pixelic-api.git"
  },
  "scripts": {
    "start": "pnpm build && pnpm pm2 start pm2.json && pnpm pm2 logs --raw",
    "stop": "pnpm pm2 stop all",
    "build": "turbo run build --filter=!documentation --parallel --cache-dir=.turbo --no-daemon",
    "api": "pnpm --filter api",
    "collector": "pnpm --filter collector",
    "web:docs": "pnpm --filter documentation"
  },
  "devDependencies": {
    "@pixelic/types": "*",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.94",
    "turbo": "^1.11.2",
    "typescript": "latest"
  },
  "dependencies": {
    "@sentry/node": "^7.88.0",
    "pm2": "^5.3.0"
  }
}