{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "commitMessagePrefix": "chore(deps):"
    },
    {
      "matchFileNames": [
        "apps/*",
        "packages/*"
      ],
      "includePaths": [
        "package.json"
      ],
      "automerge": true
    }
  ]
}