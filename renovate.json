{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "packagePatterns": [
        "apps/*/package.json",
        "packages/*/package.json"
      ],
      "enabled": true
    }
  ]
}